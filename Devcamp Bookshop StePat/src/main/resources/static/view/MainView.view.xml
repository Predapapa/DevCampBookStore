<mvc:View controllerName="BWATC.BookstoreWebAppTC.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List
		items="{/}"
		headerText="Books">
		<ObjectListItem
			title="{title}"
			icon="sap-icon://course-book"
			press="onListItemPress"
			>
			<firstStatus>
				<ObjectStatus
					text="Available"
					 />
			</firstStatus>
			<secondStatus>
				<ObjectStatus
					text="{price} EUR"
					/>
			</secondStatus>
			<ObjectAttribute text="from {author}"/>
		</ObjectListItem>
	</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>